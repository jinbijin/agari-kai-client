{
  "name": "agari-kai-client",
  "version": "0.0.0",
  "engines": {
    "node": "^16.0.0",
    "npm": "^8.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:ci": "ng build --configuration development",
    "build:prod": "ng build --configuration production",
    "build:analysis": "ng build --configuration source-map-analysis",
    "watch": "ng build --watch --configuration development",
    "watch:prod": "ng build --watch --configuration production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "test:coverage": "jest --coverage",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "cypress:open": "ng run agari-kai-client:cypress-open",
    "cypress:run": "ng run agari-kai-client:cypress-run",
    "serve:static": "http-server -p 8080 -c-1 dist/agari-kai-client",
    "analyze-source-map": "source-map-explorer dist/agari-kai-client/**/*.js"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "globalSetup": "jest-preset-angular/global-setup",
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.12",
    "@angular/cdk": "^14.2.7",
    "@angular/common": "^14.2.12",
    "@angular/compiler": "^14.2.12",
    "@angular/core": "^14.2.12",
    "@angular/forms": "^14.2.12",
    "@angular/material": "^14.2.7",
    "@angular/platform-browser": "^14.2.12",
    "@angular/platform-browser-dynamic": "^14.2.12",
    "@angular/router": "^14.2.12",
    "@angular/service-worker": "^14.2.12",
    "dexie": "^3.2.2",
    "luxon": "^3.2.1",
    "luxon-angular": "^5.2.0",
    "rxjs": "^7.8.0",
    "tslib": "^2.4.1",
    "uuid": "^9.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.10",
    "@angular-eslint/builder": "14.1.2",
    "@angular-eslint/eslint-plugin": "14.1.2",
    "@angular-eslint/eslint-plugin-template": "14.1.2",
    "@angular-eslint/schematics": "14.1.2",
    "@angular-eslint/template-parser": "14.1.2",
    "@angular/cli": "~14.2.10",
    "@angular/compiler-cli": "^14.2.12",
    "@cypress/schematic": "^2.4.0",
    "@types/jest": "^28.1.8",
    "@types/luxon": "^3.2.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "cypress": "^12.3.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "http-server": "^14.1.1",
    "jest": "^28.1.3",
    "jest-preset-angular": "^12.2.3",
    "prettier": "^2.8.2",
    "source-map-explorer": "^2.5.3",
    "typescript": "~4.7.2"
  }
}
